<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_title_bar_searck"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/title_bar_height"
              android:background="@color/primary_dark"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:onClick="back"
        android:scaleType="center"
        android:src="@mipmap/title_back"/>


    <TextView
        android:id="@+id/title_bar_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_weight="1"
        android:background="@drawable/shape_title_edittext"
        android:drawableLeft="@mipmap/title_search"
        android:drawablePadding="@dimen/margin_5"
        android:gravity="center_vertical"
        android:hint="@string/search"
        android:paddingLeft="@dimen/margin_5"
        android:singleLine="true"
        android:textColorHint="@color/color_99"
        android:textSize="@dimen/size_14"/>

    <ImageView
        android:id="@+id/title_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@mipmap/title_more"/>

    <TextView
        android:id="@+id/title_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:maxLength="4"
        android:padding="@dimen/margin_10"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16"/>

</LinearLayout>